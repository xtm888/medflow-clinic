# Central Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB Connection (use MongoDB Atlas for production)
MONGODB_URI=mongodb://127.0.0.1:27017/medflow_central?replicaSet=rs0

# JWT Secret for admin authentication
JWT_SECRET=your-central-jwt-secret-change-in-production

# Master sync token (clinics use this to authenticate)
MASTER_SYNC_TOKEN=your-master-sync-token-change-in-production

# Allowed clinic IPs (comma-separated, empty = allow all)
ALLOWED_CLINIC_IPS=

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Sync settings
SYNC_BATCH_SIZE=100
CONFLICT_STRATEGY=last_write_wins
