# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
# Local MongoDB (for development)
MONGODB_URI=mongodb://127.0.0.1:27017/medflow?replicaSet=rs0

# MongoDB Atlas (Cloud - works with Vercel deployment)
# MONGODB_URI=mongodb+srv://aioxtm:Magloire123@cluster0.nyylqsu.mongodb.net/medflow?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-32-characters-long!!

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENAI_API_KEY=your-openai-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=./backups

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs